<!-- First section -->
<div class = "background-pink">
  <div class = "container pt-3 pt-md-5">
    <div class = "row py-2 py-md-3">
      <div class = "col-12 col-md-8">
        <h1 class = "text-white display-4">We're converting under-utilised office space into <strong class = "underline-yellow" data-toggle="tooltip" data-placement="bottom" title="Soundproofed, of course, and kitted out with everything you need">music practice rooms</strong>. <span class = "badge badge-info">FREE OF CHARGE</span></h1>
        <h1 class = "text-white mt-5">Would you like one in your office?</h1>
      </div>
      <div class = "col-12 col-md-4 text-center">
        <h1 class = "text-mint"><%= image_tag("cityscape.svg", class: "py-3 my-3 pr-2", height: '100') %> + <%= image_tag("SM_Logo.svg", class: "py-3 my-3", height: '100') %></h1>
      </div>
      <div class = "col-10 offset-1 col-md-6 offset-md-3">
        <div class = "col-12">
          <div class = "btn btn-primary col-12 mt-3 mt-md-5" data-toggle="modal" data-target="#interestedUserModal">Yes</div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Second section -->
<div class = "">
  <div class = "container">
    <div class = "row">
      <div class = "col-12 col-md-6">
        <%= image_tag("music-room-demo.jpg", class: "py-3 img img-fluid") %>
      </div>
      <div class = "col-md-6 my-3 background-purple text-center">
        <h1 class = "text-white my-4">We want to find the most musical offices.</h1>
        <h4 class = "text-yellow my-4">Full of current, former or aspiring musicians.</h4>
        <div class = "col-10 offset-1 col-md-6 offset-md-3">
          <div class = "col-12">
            <div class = "btn btn-pink col-12 mt-3 mt-md-5 mb-2" data-toggle="modal" data-target="#interestedUserModal">I'm interested</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Third section -->
<div class = "background-mint">
  <div class = "container">
    <div class = "row">
      <h1 class = "text-center text-white display-4 mt-3 mb-4">The most musical offices</h1><br />
    </div>
    <div class = "row">
      <div class = "col-md-6">
        <h6 class = "text-white underline-yellow">No. of registered musicians, by company</h6>
        <%= bar_chart [["???", 222], ["??", 104], ["?", 99]], colors: ["rgba(250, 188, 15, 1)"], library: {legend: {position: "left"}} %>
        <div class = "col-12">
          <div class = "btn btn-pink col-12 my-2" data-toggle="modal" data-target="#interestedUserModal">Where do you rank?</div>
        </div>
      </div>
      <div class = "col-md-6">
        <div class = "row">
          <div class = "col-10 offset-1 background-pink my-2">
            <h3 class = "text-center text-white mt-2">Register your interest</h3>
            <p class = "text-white">Our rooms have the biggest impact in offices where there are lots of interested people.</p>
            <p class = "text-white">Register your interest with your work email address, and share this link with your colleagues. If your company is near the top of the leaderboard, we'll do everything we can to get you a music room.</p>
            <div class = "col-10 offset-1 col-md-6 offset-md-3">
              <div class = "col-12">
                <div class = "btn btn-yellow col-12 mb-2" data-toggle="modal" data-target="#interestedUserModal">Sign me up</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="interestedUserModal" tabindex="-1" role="dialog" aria-labelledby="interestedUserModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="interestedUserModalLabel">Register your interest</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @interested_user do |f| %>
        <div class="modal-body">
          <%= f.input :email, hint: "Use your work one so we know which company you're from (we never share data)" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>$('h1').addClass('fade-out');</script>
<script>
  $(function() {
    $('h1').removeClass('fade-out');
    $('.carousel').carousel({
      interval: 15000
    });
    function testScroll(ev){
      if (window.pageYOffset>400) {
        $(".change-button").addClass("btn-yellow");
      };
    }
    window.onscroll=testScroll
  });
</script>