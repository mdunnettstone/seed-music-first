<h1 class = "ml-3">Add a facility</h1>
<div class = "booyah-box col-10 offset-1 pt-3">

<div class = "row">
  <div class = "col-8">
    <%= simple_form_for @room_facility, url: room_room_facilities_path do |f| %>
      <div class="form-inputs">
        <%= f.input :facility_id, collection: Facility.all, label_method: :full_facility, value_method: :id, include_blank: false  %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Create", class: 'btn btn-primary col-12' %>
      </div>
    <% end %>
  </div>
  <div class = "col-4">
    <p>Don't see it</p><%= link_to "Add a new facility", new_facility_path, class: 'btn btn-secondary' %>
  </div>
</div>
<br />
</div>