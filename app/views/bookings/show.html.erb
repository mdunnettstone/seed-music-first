<div class = "container">
  <h1 class = "col-12 text-center my-5">You're going to play some music!</h1>
  <div class = "row justify-content-center">
    <div class="col-10 col-md-6">
      <div class = "booyah-box px-3">
        <h3 class = "mt-3">Details</h3>
        <div class = "ml-3">
          <h4><i class="fa fa-calendar" aria-hidden="true"></i> <%= @booking.start_time.strftime("%a, %e %b %Y") %></h4>
          <h4><i class="fa fa-clock-o" aria-hidden="true"></i> <%= "#{@booking.start_time.strftime("%H:%M")} - #{@booking.end_time.strftime("%H:%M")}" %></h4>
          <h5 class = "grey-text"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= link_to @booking.room.name, room_path(@booking.room) %></h5>
          <h5 class = "grey-text"><i class="fa fa-users" aria-hidden="true"></i> <%= @booking.user_list %></h5>
        </div>
        <div class = "col-12">
          <hr class = "hr-grey my-4">
        </div>
        <h3 class = "mt-2">Actions</h3>
        <div class = "row mx-3">
          <div class = "col-12 mb-2 btn btn-primary"><i class="fa fa-calendar-plus-o" aria-hidden="true"></i>&nbsp Add to calendar</div>
          <%= link_to booking_path(@booking), class: "col-12 mb-2 btn btn-danger", method: :delete, data: {confirm: 'Are you sure? This will delete the booking for everyone!'} do %>
            <i class="fa fa-trash" aria-hidden="true"></i>&nbsp Delete
          <% end %>
        </div>
      </div>
      <br />
    </div>
  </div>
</div>