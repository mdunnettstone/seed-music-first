<%= form_tag(bookings_path, method: :get) do %>
  <%= text_field_tag :start_date, @searched_start_time.strftime("%Y-%m-%d") %>
  <%= select_time @searched_start_time, minute_step: 15 %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


<h3>Room timeslots</h3>
<%= @searched_start_time %>
<% @rooms.each do |room| %>
  <h4><%= room.name %></h4>
  <ul>
    <% room.room_timeslots.each do |timeslot| %>
      <% if timeslot.booking_id.blank? %>
        <li><%= "#{timeslot.slot_start.strftime("%H:%M")} - available" %></li>
      <% else %>
        <li><%= "#{timeslot.slot_start.strftime("%H:%M")} - booked" %></li>
      <% end %>
  <% end %>
  </ul>
<% end %>





