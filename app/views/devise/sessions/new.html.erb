<div class = "col-10 offset-1 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
  <div class = "booyah-box mt-5 mb-1 py-2 px-2">
    <h3>Sign in</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in", class: 'btn btn-primary col-12' %>
      </div>
    <% end %>
    <%= link_to new_password_path(resource_name), class: "text-grey" do %>
      <i class="fa fa-question-circle" aria-hidden="true"></i> Forgot your password?
    <% end %>
    <br />
    <%= link_to new_user_confirmation_path(resource_name), class: "text-grey" do %>
      <i class="fa fa-check-circle-o" aria-hidden="true"></i> Need to confirm your account?
    <% end %>
  </div>
  <%= link_to "Sign-up", new_registration_path(resource_name), class: "btn btn-secondary col-8 offset-2 mb-2" %>
</div>