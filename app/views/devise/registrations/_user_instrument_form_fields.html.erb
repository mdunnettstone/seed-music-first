
<div class="form-inputs">
  <h2>Your music</h2>
  <div class="all_instrument_fields">
    <%= form.simple_fields_for :user_instruments do |instrument| %>
      <div class="instrument_field"/>
        <p class = "mb-0 mt-2">Instrument: </p>
        <%= instrument.input :instrument_id, collection: Instrument.order(:name), label: false, value_method: :id, include_blank: false, input_html: { :class => 'multiselect' } %>
        <p class = "mb-0 mt-2">Genre: </p>
        <%= instrument.input :genre_id, collection: Genre.order(:name), label: false, value_method: :id, include_blank: false, :input_html => { :class => 'multiselect' } %>
        <% if include_remove %>
          <div class = "btn btn-danger remove-field">Remove</div>
        <% end %>
        <hr />
      </div>
    <% end %>
  </div>
  <p><a href="#" class="add_instrument_field">+ add another</a></p>
  <%= form.input :description, autofocus: true, hint: "Say a few words about what you like to play and, if you wish to, an indicator of your level" %>
</div>