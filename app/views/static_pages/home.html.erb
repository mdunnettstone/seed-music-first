<script>
$(function() {
  $('.carousel').carousel({
    interval: 15000
  });

  $(".business-section-select").click(function () {
    if($(this).hasClass("btn-secondary")){
      $(".btn-primary").removeClass("btn-primary").addClass("btn-secondary");
      $(this).removeClass("btn-secondary").addClass("btn-primary");
    }
    $(".business-section").show();
    $(".university-section").hide();
  });

  $(".university-section-select").click(function () {
    if($(this).hasClass("btn-secondary")){
      $(".btn-primary").removeClass("btn-primary").addClass("btn-secondary");
      $(this).removeClass("btn-secondary").addClass("btn-primary");
    }
    $(".university-section").show();
    $(".business-section").hide();
  });

});
</script>